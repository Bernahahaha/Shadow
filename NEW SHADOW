    local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()
    
    -- ======================= ShadowCore Main GUI =======================

end

-- Key System Logic
VerifyBtn.MouseButton1Click:Connect(function()
    if KeyBox.Text == correctKey then
        VerifyBtn.Text = "‚úÖ Verified!"
        VerifyBtn.BackgroundColor3 = Color3.fromRGB(40, 170, 110)
        task.wait(0.6)
        ScreenGui:Destroy()
        loadMainUI() -- Run your actual ShadowCore GUI
    else
        VerifyBtn.Text = "‚ùå Invalid Key"
        VerifyBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        task.wait(1.2)
        VerifyBtn.Text = "üîë Verify Key"
        VerifyBtn.BackgroundColor3 = Color3.fromRGB(60, 140, 255)
    end
end)
