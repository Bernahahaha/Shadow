local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

-- Mobile-friendly size
local Window = Fluent:CreateWindow({
    Title = "Fluent " .. Fluent.Version,
    SubTitle = "by dawid",
    TabWidth = 140,                  -- medium width for tabs
    Size = UDim2.fromOffset(480, 440), -- medium overall window size
    Acrylic = true,                  -- keeps blur effect
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
}}

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" }),
    ESP = Window:AddTab({ Title = "ESP", Icon = "eye" }),
    Teleports = Window:AddTab({ Title = "Teleports", Icon = "map-pin" }),
    Bring = Window:AddTab({ Title = "Bring", Icon = "arrow-down" })
}

local Options = Fluent.Options

-- Notifications
Fluent:Notify({
    Title = "Fluent",
    Content = "The script has been loaded.",
    Duration = 5
})

-- Main Tab Example
Tabs.Main:AddParagraph({ Title = "Welcome", Content = "This is your main hub!" })

Tabs.Main:AddButton({
    Title = "Test Dialog",
    Description = "Opens a test dialog",
    Callback = function()
        Window:Dialog({
            Title = "Dialog",
            Content = "This is a test dialog.",
            Buttons = {
                { Title = "Confirm", Callback = function() print("Confirmed") end },
                { Title = "Cancel", Callback = function() print("Cancelled") end }
            }
        })
    end
})

-- Toggle Example
local Toggle = Tabs.Main:AddToggle("MyToggle", {Title = "Toggle", Default = false})
Toggle:OnChanged(function() print("Toggle:", Options.MyToggle.Value) end)

-- Slider Example
local Slider = Tabs.Main:AddSlider("Slider", {
    Title = "Slider",
    Default = 2,
    Min = 0,
    Max = 5,
    Rounding = 1,
    Callback = function(Value) print("Slider:", Value) end
})
Slider:SetValue(3)

-- ESP Tab Example
Tabs.ESP:AddToggle("ESPPlayers", { Title = "Enable ESP for Players", Default = false }):OnChanged(function()
    print("ESP Players:", Options.ESPPlayers.Value)
end)

Tabs.ESP:AddToggle("ESPItems", { Title = "Enable ESP for Items", Default = false }):OnChanged(function()
    print("ESP Items:", Options.ESPItems.Value)
end)

-- Teleports Tab Example
Tabs.Teleports:AddButton({ Title = "Teleport to Spawn", Callback = function()
    print("Teleported to Spawn") -- replace with actual teleport code
end })
Tabs.Teleports:AddButton({ Title = "Teleport to Boss", Callback = function()
    print("Teleported to Boss") -- replace with actual teleport code
end })

-- Bring Tab Example
Tabs.Bring:AddToggle("BringItems", { Title = "Bring Selected Items", Default = false }):OnChanged(function()
    print("Bring Items:", Options.BringItems.Value)
end)
Tabs.Bring:AddButton({ Title = "Bring All Resources", Callback = function()
    print("All resources brought") -- replace with actual bring code
end })

-- Addons
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)
SaveManager:IgnoreThemeSettings()
SaveManager:SetFolder("FluentScriptHub/specific-game")
InterfaceManager:SetFolder("FluentScriptHub")
InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)
Window:SelectTab(1)
SaveManager:LoadAutoloadConfig()
